<% if @review.errors.any? %>
 <h2>The following errors prevented your review from being saved</h2>
 <ul>
 <% @review.errors.full_messages.each do |x|%>
 <li><%= x %></li>
 <% end %>
 </ul>
 <% end %>
<div class="row">
<div class="col-xs-12">
<%= form_for(@review, :html => {class: "form-horizontal", role: "form"}) do |f| %>
<div class="form-group">
<div class="control-label col-sm-2">
  <%= f.label :title %><br>
  </div>
 <div class="col-sm-6">
 <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
 </div>
 </div>
 <div class="form-group">
 <div class="control-label col-sm-2">
  <%= f.label :review %><br>
  </div>
  <div class="col-sm-6">
    <%= f.text_area :review, rows: 10, class: "form-control", placeholder: "Body of review" %>
  </div>
  </div>
  <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit class: 'btn btn-primary btn-large' %>
   </div>
  </div>
<% end %>
</div>
</div>
 
