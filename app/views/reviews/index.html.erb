<h1 align="center">Showing all reviews</h1>

  <%= link_to "Create new review", new_review_path %>


 <% @reviews.each do |review| %>
 <div class="row">
  <div class="col-xs-8 col-xs-offset-2">
   <div class="well well-lg">
    <div class="review-title">
       <%= link_to review.title, review_path(review) %>
      </div>
      <div class="review-body">
     <%= truncate(review.review, length: 100) %>
    </div>
    <div class="article-actions">
    <%= link_to 'Edit review', edit_review_path(review), class: "btn btn-xs btn-info" %>
    <%= link_to 'Show review', review_path(review), class: "btn btn-xs btn-info" %>
    <%= link_to 'Delete', review_path(review), method: :delete, data: {confirm: "Are you sure you want to delete this review?"}, class: "btn btn-xs btn-info" %>
  <td><small>Created by: <%= review.user.username if review.user_id %>,
  <%= time_ago_in_words(review.created_at) %> ago,
  last updated: <%= time_ago_in_words(review.updated_at) %> ago</small></td>
  </div>
  </div>
  </div>
  </div>
 <% end %>




<%= link_to 'Back', reviews_path %>
