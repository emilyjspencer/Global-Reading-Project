<h1>Showing all reviews</h1>
<%= link_to "Create new review", new_review_path %>
<table>
 <tr>
  <th>Title</th>
  <th>Review</th>
 </tr>
 <% @reviews.each do |review| %>
 <tr>
  <td><%= review.title %></td>
  <td><%= review.review %></td>
  <td><%= link_to 'Edit review', edit_review_path(review) %></td>
  <td><%= link_to 'Show review', review_path(review) %></td>
  <td><%= link_to 'Delete', review_path(review), method: :delete, data: {confirm: "Are you sure you want to delete this review?"} %></td>
  <td><small>Created by: <%= review.user.username if review.user_id %>,
  <%= time_ago_in_words(review.created_at) %> ago,
  last updated: <%= time_ago_in_words(review.updated_at) %> ago</small></td>
  </tr>
 <% end %>
</table>






<%= link_to 'Back', reviews_path %>
